---
// Contact section - Modern & Chic
const phone = "871 53 14 23";
const phoneLink = "tel:+34871531423";
---

<section id="contact" class="py-20 md:py-28 bg-white relative overflow-hidden">
  <!-- Subtle decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-olive/5 rounded-full translate-x-1/2 -translate-y-1/2 blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent-red/5 rounded-full -translate-x-1/2 translate-y-1/2 blur-3xl"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Two column layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Left side - Content -->
      <div>
        <span class="inline-flex items-center gap-2 text-olive font-medium text-sm uppercase tracking-wider">
          <span class="w-8 h-[2px] bg-olive"></span>
          Contact Us
        </span>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-charcoal mt-4 leading-tight">
          Ready for<br/>
          <span class="text-accent-red">Delicious Pizza?</span>
        </h2>
        <p class="text-warm-gray mt-6 text-lg leading-relaxed">
          Give us a call to place your order. We're here to serve you the finest Italian pizzas in Pollen√ßa.
        </p>
        
        <!-- Service tags -->
        <div class="flex flex-wrap gap-3 mt-8">
          <span class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full shadow-sm border border-gray-100">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium text-charcoal">Dine In</span>
          </span>
          <span class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full shadow-sm border border-gray-100">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium text-charcoal">Take Away</span>
          </span>
          <span class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full shadow-sm border border-gray-100">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm font-medium text-charcoal">Outdoor Terrace</span>
          </span>
        </div>
      </div>
      
      <!-- Right side - Phone Card -->
      <div class="relative">
        <div class="bg-gradient-to-br from-charcoal to-charcoal/95 rounded-3xl p-8 md:p-10 shadow-2xl overflow-hidden">
          <!-- Decorative pattern inside card -->
          <div class="absolute top-0 right-0 w-40 h-40 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-white/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
          
          <div class="relative">
            <!-- Phone icon -->
            <div class="w-14 h-14 bg-royal-blue rounded-2xl flex items-center justify-center mb-6 shadow-lg">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            
            <!-- Phone number -->
            <p class="text-white/60 text-sm mb-2">Call us to order</p>
            <a href={phoneLink} class="text-3xl md:text-4xl font-bold text-white hover:text-royal-blue transition-colors duration-300 block mb-8">
              {phone}
            </a>
            
            <!-- CTA Button -->
            <a 
              href={phoneLink}
              class="w-full inline-flex items-center justify-center gap-3 px-8 py-4 bg-italian-red text-white font-semibold rounded-xl hover:bg-italian-red-dark transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-[1.02]"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Call Now
            </a>
            
            <!-- Hours -->
            <div class="mt-8 pt-6 border-t border-white/10">
              <p class="text-white/40 text-xs uppercase tracking-wider mb-2">Opening Hours</p>
              <p class="text-white/80 text-sm">Open daily for lunch & dinner</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
