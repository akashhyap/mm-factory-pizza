---
// Hero section with modern split design
import { Image } from 'astro:assets';
import heroBackground from '../assets/m-m-outlet.webp';
---

<section class="relative min-h-[90vh] flex items-center overflow-hidden bg-cream">
  <!-- Split layout container -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-center py-16 lg:py-0">
      
      <!-- Left: Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-olive/5 rounded-full mb-6 animate-fade-in-up">
          <span class="w-2 h-2 bg-olive rounded-full animate-pulse"></span>
          <span class="text-dark-charcoal/60 font-medium text-sm">Fresh from the oven</span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold text-charcoal leading-tight mb-6 animate-fade-in-up animation-delay-200">
          Authentic Pizza
          <span class="block text-accent-red">in Pollença</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-warm-gray mb-8 max-w-lg mx-auto lg:mx-0 animate-fade-in-up animation-delay-400">
          Handcrafted with love using fresh ingredients and traditional Italian recipes. Dine in, take away, or enjoy our sunny terrace.
        </p>

        <!-- Features tags -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-3 mb-10 animate-fade-in-up animation-delay-400">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white rounded-full text-sm text-charcoal shadow-sm">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Vegetarian Options
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white rounded-full text-sm text-charcoal shadow-sm">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Outdoor Seating
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white rounded-full text-sm text-charcoal shadow-sm">
            <svg class="w-4 h-4 text-olive" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Take Away
          </span>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 animate-fade-in-up animation-delay-600">
          <a 
            href="#menu" 
            class="group w-full sm:w-auto px-8 py-4 bg-royal-blue text-2xl text-white font-semibold rounded-full hover:bg-royal-blue-dark transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
          >
            View Menu
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
         
        </div>

        <!-- Price highlight -->
        <div class="mt-10 animate-fade-in-up animation-delay-600">
          <p class="text-warm-gray text-sm">All pizzas starting at</p>
          <p class="text-3xl font-bold text-charcoal">€9.50</p>
        </div>
      </div>

      <!-- Right: Image -->
      <div class="order-1 lg:order-2 relative animate-fade-in-up">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -top-4 -left-4 w-24 h-24 bg-olive/20 rounded-full blur-2xl"></div>
          <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-accent-red/20 rounded-full blur-2xl"></div>
          
          <!-- Main image container -->
          <div class="relative rounded-3xl overflow-hidden shadow-2xl">
            <Image 
              src={heroBackground} 
              alt="M&M Factory Pizza restaurant" 
              class="w-full h-[300px] sm:h-[400px] lg:h-[500px] object-cover"
              loading="eager"
            />
            <!-- Subtle gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal/20 via-transparent to-transparent"></div>
          </div>

          <!-- Floating card -->
          <div class="absolute -bottom-6 -left-6 sm:left-6 bg-white rounded-2xl p-4 shadow-xl animate-fade-in-up animation-delay-600 hidden sm:block">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-olive/10 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs text-warm-gray">Find us at</p>
                <p class="text-sm font-semibold text-charcoal">Pollença, Mallorca</p>
              </div>
            </div>
          </div>

          <!-- Rating badge -->
          <div class="absolute -top-3 -right-3 sm:top-6 sm:right-6 bg-white rounded-full px-4 py-2 shadow-lg flex items-center gap-2">
            <div class="flex">
              {[1,2,3,4,5].map(() => (
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            <span class="text-sm font-semibold text-charcoal">5.0</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom wave decoration -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-16 text-white" viewBox="0 0 1440 54" fill="none" preserveAspectRatio="none">
      <path d="M0 22L60 16.7C120 11 240 1.00001 360 0.700012C480 1.00001 600 11 720 16.7C840 22 960 22 1080 19.3C1200 16 1320 11 1380 8.30001L1440 5.70001V54H1380C1320 54 1200 54 1080 54C960 54 840 54 720 54C600 54 480 54 360 54C240 54 120 54 60 54H0V22Z" fill="currentColor"/>
    </svg>
  </div>
</section>
