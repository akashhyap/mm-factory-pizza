  { num: 32, name: "Clasico", descEs: "Tomate, mozzarella, jamón y champiñones", descEn: "Tomato sauce, mozzarella cheese, ham and mushrooms", vegetarian: false },
  { num: 33, name: "Vegetariano", descEs: "Tomate, mozzarella y verduras frescas", descEn: "Tomato sauce, mozzarella cheese and fresh vegetables", vegetarian: true },
  { num: 34, name: "4 Formaggi", descEs: "Tomate, mozzarella y 4 quesos variados", descEn: "Tomato sauce, mozzarella cheese and 4 mixed cheeses", vegetarian: true },
