---
// Location section with embedded map
const address = "Carrer del Llevant, 42, 07470 Pollença, Illes Balears";
const mapUrl = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3067.1234567890123!2d3.0123456789012345!3d39.87654321098765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMznCsDUyJzM1LjYiTiAzwrAwMCc0NC40IkU!5e0!3m2!1sen!2ses!4v1234567890123!5m2!1sen!2ses`;
const directionsUrl = `https://www.google.com/maps/dir/?api=1&destination=${encodeURIComponent(address)}`;
---

<section id="location" class="py-20 md:py-28 bg-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="text-accent-red font-semibold text-sm uppercase tracking-wider">Find Us</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-charcoal mt-3">
        Our Location
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <!-- Map -->
      <div class="order-2 lg:order-1">
        <div class="bg-warm-beige rounded-2xl overflow-hidden shadow-lg aspect-video lg:aspect-[4/3]">
          <!-- Google Maps Embed (no API key required) -->
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3067.5!2d3.0165!3d39.8765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1297b45cf1234567%3A0x123456789abcdef!2sCarrer%20del%20Llevant%2C%2042%2C%2007470%20Pollen%C3%A7a%2C%20Illes%20Balears%2C%20Spain!5e0!3m2!1sen!2ses!4v1703836800000!5m2!1sen!2ses"
            width="100%" 
            height="100%" 
            style="border:0; min-height: 300px;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            title="M&M Factory Pizza location on Google Maps"
            class="w-full h-full"
          ></iframe>
        </div>
      </div>

      <!-- Address Info -->
      <div class="order-1 lg:order-2">
        <div class="bg-white rounded-2xl p-8 md:p-10 shadow-sm">
          <div class="flex items-start gap-4 mb-8">
            <div class="w-14 h-14 bg-accent-red/10 rounded-xl flex items-center justify-center shrink-0">
              <svg class="w-7 h-7 text-accent-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-charcoal text-xl mb-2">Visit Us</h3>
              <p class="text-warm-gray leading-relaxed">
                Carrer del Llevant, 42<br />
                07470 Pollença<br />
                Illes Balears, Spain
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4 mb-8">
            <div class="w-14 h-14 bg-olive/10 rounded-xl flex items-center justify-center shrink-0">
              <svg class="w-7 h-7 text-olive" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-charcoal text-xl mb-2">Service Options</h3>
              <div class="flex flex-wrap gap-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-olive/10 text-olive font-medium">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Outdoor Seating
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-olive/10 text-olive font-medium">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Vegetarian Options
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-accent-red/10 text-accent-red font-medium">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Take Away
                </span>
              </div>
            </div>
          </div>

          <a 
            href={directionsUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="w-full inline-flex items-center justify-center gap-2 px-6 py-4 bg-royal-blue text-white font-semibold rounded-xl hover:bg-royal-blue-dark transition-all duration-300 transform hover:scale-[1.02] shadow-md hover:shadow-lg"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
