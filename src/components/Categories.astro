---
// Categories component - Pizza & Calzone showcase
import margheritaImg from '../assets/margherita.jpg';
import calzoneClassicoImg from '../assets/calzone-calcico.jpg';
---

<section class="py-20 md:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="text-olive font-medium text-sm uppercase tracking-wider">What We Serve</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-charcoal mt-3">
        Our Specialties
      </h2>
      <p class="text-warm-gray mt-4 max-w-xl mx-auto">
        Handcrafted with passion using authentic Italian recipes and the freshest ingredients
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      
      <!-- Pizza Card -->
      <a href="#menu" class="group relative block overflow-hidden rounded-3xl bg-warm-beige cursor-pointer">
        <div class="aspect-[16/9] overflow-hidden">
          <img 
            src={margheritaImg.src} 
            alt="Authentic Italian Pizza" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <!-- Overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-dark-charcoal/80 via-dark-charcoal/20 to-transparent"></div>
        </div>
        
        <!-- Content -->
        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
          <div class="flex items-end justify-between">
            <div>
              <span class="inline-block px-3 py-1 bg-accent-red text-white text-xs font-semibold rounded-full mb-3">
                30 Varieties
              </span>
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">
                Pizza
              </h3>
              <p class="text-white/80 text-sm md:text-base max-w-xs">
                Classic Italian pizzas with hand-stretched dough and premium toppings
              </p>
            </div>
            
            <!-- Arrow button -->
            <div class="w-12 h-12 md:w-14 md:h-14 bg-white rounded-full flex items-center justify-center shadow-lg group-hover:bg-accent-red transition-colors duration-300 shrink-0 ml-4">
              <svg class="w-5 h-5 md:w-6 md:h-6 text-charcoal group-hover:text-white transition-colors duration-300 group-hover:translate-x-1 transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Price tag -->
        <div class="absolute top-6 right-6 bg-white/95 backdrop-blur-sm rounded-2xl px-4 py-2 shadow-lg">
          <p class="text-xs text-warm-gray">Starting at</p>
          <p class="text-xl font-bold text-charcoal">€9.50</p>
        </div>
      </a>

      <!-- Calzone Card -->
      <a href="#menu" class="group relative block overflow-hidden rounded-3xl bg-warm-beige cursor-pointer">
        <div class="aspect-[16/9] overflow-hidden">
          <img 
            src={calzoneClassicoImg.src} 
            alt="Fresh Calzone" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <!-- Overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-dark-charcoal/80 via-dark-charcoal/20 to-transparent"></div>
        </div>
        
        <!-- Content -->
        <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
          <div class="flex items-end justify-between">
            <div>
              <span class="inline-block px-3 py-1 bg-olive text-white text-xs font-semibold rounded-full mb-3">
                3 Varieties
              </span>
              <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">
                Calzone
              </h3>
              <p class="text-white/80 text-sm md:text-base max-w-xs">
                Folded pizza pockets filled with delicious cheese and toppings
              </p>
            </div>
            
            <!-- Arrow button -->
            <div class="w-12 h-12 md:w-14 md:h-14 bg-white rounded-full flex items-center justify-center shadow-lg group-hover:bg-olive transition-colors duration-300 shrink-0 ml-4">
              <svg class="w-5 h-5 md:w-6 md:h-6 text-charcoal group-hover:text-white transition-colors duration-300 group-hover:translate-x-1 transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Price tag -->
        <div class="absolute top-6 right-6 bg-white/95 backdrop-blur-sm rounded-2xl px-4 py-2 shadow-lg">
          <p class="text-xs text-warm-gray">Starting at</p>
          <p class="text-xl font-bold text-charcoal">€9.50</p>
        </div>
      </a>

    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-12 lg:mt-16">
      <a 
        href="#menu" 
        class="inline-flex items-center gap-2 text-charcoal font-semibold hover:text-accent-red transition-colors duration-300"
      >
        <span>View Full Menu</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
