---
import '../styles/global.css';
import { CartProvider } from '../components/cart/CartProvider';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "M&M Factory Pizza | Authentic Pizza in Pollença", 
  description = "Discover authentic Italian pizza at M&M Factory Pizza in Pollença, Mallorca. Fresh ingredients, vegetarian options, outdoor seating. All pizzas €9.50."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="pizza, Pollença, Mallorca, Italian food, vegetarian, restaurant, authentic pizza, Mediterranean" />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preload critical fonts for better performance -->
    <link rel="preload" href="/fonts/Poppins-Regular-subset.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Poppins-SemiBold-subset.woff2" as="font" type="font/woff2" crossorigin />
    
    <title>{title}</title>
  </head>
  <body class="bg-cream text-charcoal antialiased">
    <CartProvider client:load>
      <slot />
    </CartProvider>
  </body>
</html>
